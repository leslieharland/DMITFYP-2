</head>
<body>
    @Html.Partial("WebsiteDisclaimerModal")
    <div id="wrap">

        @await Html.PartialAsync("_AppMainNav")
        <div class="container body-content">
            <div id="wrapper">
                <div class="container-fluid">
                    @await Html.PartialAsync("_SidePanel")
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="footer">
        <hr />
        <div class="container">
            <p><a href="#" data-target="#legalModal" data-toggle="modal">Legal</a>&nbsp;&nbsp;Singapore Polytechnic FYP &copy; @DateTime.Now.Year</p>
        </div>
    </footer>
    <div id="scripts">


       
    </div>
