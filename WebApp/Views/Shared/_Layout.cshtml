    <style>

        .boxed {
            background-color: #fff;
            border: 1px solid #e4e4e4;
            border-radius: 6px;
            min-height: 250px;
            width: 75%;
            display: block;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }

            .boxed:after {
                content: "";
                display: table;
                clear: both;
            }

        .push-down-45 {
            margin-bottom: 45px;
        }

        .panel-body.panel-body-noheader.panel-body-noborder {
            overflow: hidden !important;
        }

        .fbox-container {
            display: -ms-flex;
            display: -webkit-flex;
            display: flex;
        }

            .fbox-container > div {
                border: 1px solid #999999;
                width: 50%;
                padding: 10px;
            }

                .fbox-container > div:first-child {
                    margin-right: -1px;
                }

        .borderless td, .borderless th {
            border: none;
        }

        .btn-no-border {
            border: 0 solid transparent;
            font-size: 1.3rem;
            padding: 4px 8px;
            border-radius: 2px;
            -webkit-transition: all 0.25s ease-out;
            -moz-transition: all 0.25s ease-out;
            -o-transition: all 0.25s ease-out;
            transition: all 0.25s ease-out;
        }

        .post-heading {
            font-weight: 600;
            font-size: 1.6rem !important;
        }

        .post-body {
            font-family: "Segoe UI", Helvetica, serif !important;
            padding-top: 20px;
            font-size: 1.4rem !important;
            line-height: 1.3;
        }

        .col-property {
            padding-top: 8px;
        }

        #wrapper {
            /*margin-left: 8.5%;*/
        }

        #page-content-wrapper {
            width: 80%;
        }

        /** Sidebar ***/
        .sidebar {
            -moz-transition: all 0.3s ease;
            -o-transition: all 0.3s ease;
            -webkit-transition: all 0.3s ease;
            transition: all 0.3s ease;
            position: absolute;
            width: 200px;
            height: 100%;
            clear: none;
        }

        .content {
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            -webkit-transition: all 0.5s ease;
            transition: all 0.5s ease;
            height: 100%;
            overflow: hidden;
            margin-left: 200px;
        }


        .container-fluid {
            margin-top: 80px;
        }

            .container-fluid.toggled .sidebar {
                left: -200px;
            }

            .container-fluid.toggled .content {
                margin-left: 0;
            }

        /* On small screens the sidebar should be the full-width */
        @@media (max-width: 768px) {
            .container-fluid .sidebar {
                left: -200px;
            }

            .container-fluid .content {
                margin-left: 0;
            }

                .container-fluid.toggled .sidebar {
                    width: 100%;
                    left: 0;
                }

                .container-fluid.toggled .content {
                    margin-left: 100%;
                }
        }

        .panel-default {
            padding: 12px;
        }

        ul#sidebar-list {
            font-weight: bold;
            list-style: none;
        }

            ul#sidebar-list > li {
                display: block;
                padding-left: 0;
                -ms-text-overflow: ellipsis;
                -o-text-overflow: ellipsis;
                text-overflow: ellipsis;
                white-space: nowrap;
                margin-top: 8px;
                text-decoration: none;
                height: 24px;
                line-height: 24px;
                padding-right: 4px;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
                font-family: helvetica, arial, sans-serif;
                font-size: 1.25rem;
                color: #9197a3;
            }

                ul#sidebar-list > li > a {
                    font-family: Helvetica, sans-serif;
                    padding: 3px;
                    color: #666;
                }

                    ul#sidebar-list > li > a:hover {
                        background-color: #d3d3d3;
                        text-decoration: none;
                    }

        @@media(max-width:768px) {
            footer, .optional-button {
                -webkit-transition: all 1s ease;
                -moz-transition: all 1s ease;
                -o-transition: all 1s ease;
                transition: all 1s ease;
                display: none;
            }
        }

        html, body {
            height: 100% !important;
        }

        #wrap {
            background-color: #f1f1f1;
            min-height: 100%;
            height: auto !important;
            /* Pad bottom by footer height */
            padding: 0 0 60px;
        }


        #footer {
            background-color: #f1f1f1;
            height: 100px;
            width: 100%;
            display: table;
            float: left;
            clear: both;
        }

            #footer > .container {
                text-align: right;
                margin-right: 10px !important;
                font-size: 85%;
                color: #cccccc;
            }
    </style>



