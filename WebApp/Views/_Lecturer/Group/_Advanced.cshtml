@{
    ViewBag.GroupId = ViewBag.GroupId;
}
@model WebApp.Models.MemberInfo
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
<style>
    .s-collapsible > a {
        text-decoration: none;
        color: #666666;
        outline: 0;
    }
</style>
@TempData["RoleChangeFailed"]


<div id="advanced" data-collapse="accordion" style="text-indent: 20px;">
    <h5 class="s-collapsible"><i class="glyphicon glyphicon-chevron-right"></i>&nbsp;Advanced</h5>
    <div>
            @using (Html.BeginForm("UpdateRole", "Group", new { oldStudentId = Model.StudentId, roleId = Model.RoleId }, FormMethod.Post))
            {
                <div class="form-group">
                    <label for="StudentId" class="control-label col-md-2">Switch Role</label>
                    <div style="margin-left: -20px;display: inline">
                        @Html.DropDownList(
    "StudentId",
   Model.MemberList as IEnumerable<SelectListItem>, new { style = "width: 300px;" })
                    </div>
                    <input type="submit" value="Update" class="btn btn-default" style="padding: 4px;" />
                </div>
            }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#advanced").bind("opened", function (e, section) {
            $('.s-collapsible > a').children('.glyphicon').removeClass("glyphicon-chevron-right").addClass('glyphicon-chevron-down');

        });
        $("#advanced").bind("closed", function (e, section) {
            $('.s-collapsible > a').children('.glyphicon').removeClass("glyphicon-chevron-down").addClass('glyphicon-chevron-right');
        });
    });
</script>